pipeline {
   agent {
    node {
        label 'built-in'
        customWorkspace '/home/ec2-user'
    }
}

    stages {
        stage('checkout') {
            steps {
		sh '''
            git clone https://github.com/SamruddhiG-Github/spring-boot-war-example.git
	   cd spring-boot-war-example
		'''		
            }
        }
		stage('build') {
            steps {
                
            sh ' mvn clean install ' 

            }
        }
        stage('Deploy') {
            steps {
            sh ' cp /home/ec2-user/target/hello-world.war  /mnt/apache-tomcat-9.0.80/webapps ' 
			
            }
    }		

}
}
